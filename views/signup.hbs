<div class="bg">
  <div
    class="card pt-5 position-absolute top-50 start-50 translate-middle"
    style="width: 20rem"
  >
  <form action="/auth/signup" method="POST">
    <img
      src="/images/logo-airbnb.png"
      class="mx-auto logo-signup"
      alt="..."
    />
    <div class="card-body pt-5">
      
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Your Full Name</label
          >
          <input name="name"
            type="text"
            class="form-control"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Profile Picture</label
          >
          <input name="avatar"
            type="text"
            class="form-control"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input name="email"
            type="email"
            class="form-control"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Password</label
          >
          <input name="password"
            type="password"
            class="form-control"
            aria-describedby="emailHelp"
          />
        </div>
        <button class="btn btn-success mb-3">Signup</button>
      </form>
      <div>
      <span>New to AirBnB?</span>
      <a href="about.html">Sign Up</a>
    </div>
    </div>
  </div>
</div>